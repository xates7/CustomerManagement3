@model Customer
@{
    ViewData["Title"] = "Giriş";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Identity">Şifre</label>
                <input type="text" id="Identity" name="Identity" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">GİRİŞ</button>
        </form>

        <a asp-action="Index" class="btn btn-secondary mt-3">Listeye Dön...</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
